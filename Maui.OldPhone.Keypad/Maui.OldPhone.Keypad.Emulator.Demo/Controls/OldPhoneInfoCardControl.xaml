<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Maui.OldPhone.Keypad.Emulator.Demo.Controls.OldPhoneInfoCardControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame Style="{StaticResource OldPhoneLabelBoxFrame}">
                <StackLayout>
                    <Label Style="{StaticResource OldPhoneLabel}" Text="{TemplateBinding Title}" />
                    <BoxView Style="{StaticResource OldPhoneLabelBoxView}" />
                    <Label Style="{StaticResource OldPhoneLabelInfo}" Text="{TemplateBinding Info}" />
                </StackLayout>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>

</ContentView>
